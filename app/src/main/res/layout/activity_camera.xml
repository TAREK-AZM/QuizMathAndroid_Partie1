<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Titre -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter une Photo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#6200EE"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Aperçu de la photo -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"
        android:radius="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivPhotoPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:contentDescription="Aperçu de la photo" />

            <TextView
                android:id="@+id/tvPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Aucune photo sélectionnée"
                android:textSize="16sp"
                android:textColor="#999999"
                android:drawableTop="@android:drawable/ic_menu_camera"
                android:drawablePadding="16dp"
                android:gravity="center" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Boutons d'action pour la photo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnTakePhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Prendre une photo"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#6200EE"
            android:drawableTop="@android:drawable/ic_menu_camera"
            android:drawablePadding="4dp" />

        <Button
            android:id="@+id/btnSelectGallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Galerie"
            android:layout_marginStart="8dp"
            android:backgroundTint="#6200EE"
            android:drawableTop="@android:drawable/ic_menu_gallery"
            android:drawablePadding="4dp" />
    </LinearLayout>

    <!-- Boutons Enregistrer et Annuler -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancelPhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Annuler"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#757575" />

        <Button
            android:id="@+id/btnSavePhoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enregistrer"
            android:layout_marginStart="8dp"
            android:backgroundTint="#4CAF50"
            android:enabled="false" />
    </LinearLayout>
</LinearLayout>