<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F5F7FA"
    android:padding="@dimen/padding_large">

    <!-- Card container for numbers and result -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:elevation="8dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- Nombre 1 -->
            <TextView
                android:id="@+id/txtNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number1"
                android:textColor="#2C3E50"
                android:textSize="@dimen/text_big"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"/>

            <!-- Operation symbol placeholder -->
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp"/>

            <!-- Nombre 2 -->
            <TextView
                android:id="@+id/txtNumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number2"
                android:textColor="#2C3E50"
                android:textSize="@dimen/text_big"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="24dp"/>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E8EAF6"
                android:layout_marginBottom="24dp"/>

            <!-- Résultat -->
            <TextView
                android:id="@+id/txtResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result_label"
                android:textColor="#5E35B1"
                android:textSize="@dimen/text_result"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Boutons opérations -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_small"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FF6B6B">

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:text="@string/btn_add"
                android:textSize="@dimen/text_normal"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:paddingVertical="12dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_small"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#4ECDC4">

            <Button
                android:id="@+id/btnSubtract"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:text="@string/btn_sub"
                android:textSize="@dimen/text_normal"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:paddingVertical="12dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_small"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFD93D">

            <Button
                android:id="@+id/btnMultiply"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:text="@string/btn_mul"
                android:textSize="@dimen/text_normal"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:paddingVertical="12dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Générer Button -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_large"
        app:cardCornerRadius="25dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#6C5CE7">

        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_generate"
            android:textSize="@dimen/text_normal"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:paddingHorizontal="48dp"
            android:paddingVertical="16dp"
            android:textAllCaps="false"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>