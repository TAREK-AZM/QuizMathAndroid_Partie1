<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.firstapplication">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FirstApplication">

        <!-- Activity principale - Liste des notes -->
        <activity
            android:name=".activities.NoteListActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity pour ajouter une note -->
        <activity
            android:name="com.example.firstapplication.activities.AddNoteActivity"
            android:label="Ajouter une note"
            android:parentActivityName=".activities.NoteListActivity" />

        <!-- Activity pour voir les détails d'une note -->
        <activity
            android:name=".activities.DetailsNoteActivity"
            android:label="Détails de la note"
            android:parentActivityName=".activities.NoteListActivity" />

        <!-- Activity pour la caméra -->
        <activity
            android:name=".activities.CameraActivity"
            android:label="Ajouter une photo"
            android:parentActivityName="com.example.firstapplication.activities.AddNoteActivity" />

        <!-- FileProvider pour partager les fichiers photos -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>